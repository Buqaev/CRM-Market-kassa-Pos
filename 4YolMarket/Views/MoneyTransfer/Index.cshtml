
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}





<div class="container">
    <form method="post" action="@Url.Action("Transfer","MoneyTransfer")">
        <h3>Nəğd kassadan karthesabına pul köçür</h3><br />

        <div class="row">
            <div class="col-md-12 d-flex">
                <div class="form-group col-md-4" style="">
                    <label style="font-size:18px;">Hardan</label><br />
                    <select name="FromCashBoxId" style="font-size:18px;  border:2px solid red; width:100%;">
                        <option value="">--Seçin</option>
                        @foreach (var item in ViewBag.CashBox)
                        {

                            <option style="" value="">Nəğd Kassa</option>
                            <option style="" value="@item.Id">@item.Name</option>
                        }

                    </select>
                </div>
                <div class="form-group col-md-4" style="">
                    <label style="font-size:18px;">İsdiqamət(haraya)</label><br />
                    <select name="ToCashBoxId" style="font-size:18px;  border:2px solid red; width:100%;">
                        <option value="">--Seçin</option>
                        @foreach (var item in ViewBag.CashBox)
                        {

                            <option style="" value="">Nəğd Kassa</option>
                            <option style="" value="@item.Id">@item.Name</option>
                            
                        }

                    </select>
                </div>
                <div class="form-group col-md-4">
                    <label style="font-size:18px;">Məbləğ</label><br />
                    <input type="text" required name="Mebleg" style="width: 100%; height: 35px; font-size: 18px; " />
                </div>

            </div>
             <div class="col-md-4">
                    <button type="submit" class="btn btn-primary" style="font-size:20px;">Təsdiqlə</button>
                </div>
        </div>




    </form>
</div>

