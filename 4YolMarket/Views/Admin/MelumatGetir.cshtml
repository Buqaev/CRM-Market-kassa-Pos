
@{
    ViewBag.Title = "MelumatGetir";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Admin Melumatlarinin Yenilenmesi</h2>

<form method="post" action="@Url.Action("Update","Admin", new {Id = Model.Id})" enctype="multipart/form-data" role="form">

    <div class="card-body">
        <div class="form-group">
            <label for="exampleInputEmail1">Ad</label>
            <input type="text" value="@Model.Ad" name="Ad" class="form-control" id="exampleInputEmail1" @*placeholder="Ad Basliq Edin"*@>
        </div>
        <div class="form-group">
            <label for="exampleInputEmail1">Soyad</label>
            <input type="text" name="Soyad" value="@Model.Soyad" class="form-control" id="exampleInputEmail1" @*placeholder="Ad Metn Edin"*@>
        </div>
        <div class="form-group">
            <label for="exampleInputEmail1">Email</label>
            <input type="text" name="Email" value="@Model.Email" class="form-control" id="exampleInputEmail1" @*placeholder="Ad Metn Edin"*@>
        </div>


        <div class="form-group">
            <label for="exampleInputEmail1">Sifre</label>
            <input type="text" name="Sifre" value="@Model.Sifre" class="form-control" id="exampleInputEmail1" placeholder="Ad Metn Edin">
        </div>

    </div>
    <!-- /.card-body -->

    <div class="card-footer">
        <button type="submit" class="btn btn-primary">Yenile</button>
    </div>
</form>